<div id="createQuestion" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create Question</h4>
      </div>
      <div class="modal-body">
        <form action="/questions" autocomplete="off" method="POST">
          <input type="hidden" id="test_id" name="test_id" />
          <div class="form-group">
            <label for="question_text" class="col-form-label">Question Text</label>
            <input type="text" class="form-control" name="question_text">
          </div>
          <div class="form-group">
            <label for="time" class="col-form-label">Time(in minutes)</label>
            <input type="number" class="form-control" name="time">
          </div>
          <div class="form-group">
            <label for="description" class="col-form-label">Description</label>
            <textarea class="form-control" name="description"></textarea>
          </div>
          <div class="form-group">
            <label for="answer" class="col-form-label">Answer</label>
            <textarea class="form-control" name="answer"></textarea>
          </div>
          <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
              <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
